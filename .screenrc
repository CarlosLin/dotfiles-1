# Show status bar
hardstatus alwayslastline
hardstatus string '%{= kG}[ Professional developer ReekenX ]%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g} [%{B} %Y-%m-%d %c %{g}]'

# Turn off flashin on error
vbell off

# Don't leave last command output (for example VIM opened file output)
altscreen on

# Turn off splash screen
startup_message off