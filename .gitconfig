[user]
    name = Remigijus Jarmalaviƒçius
    email = remigijus@jarmalavicius.lt
    editor = vim
[alias]
    co = checkout -f
    ci = commit -a -q
    df = !git diff --word-diff --ignore-submodules --ignore-all-space --ignore-blank-lines --ignore-space-change --ignore-space-at-eol
    lg = log --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --graph
    st = status --ignore-submodules -sb
    standup = !"git log --reverse --branches --since='$(if [[ "Mon" == "$(date +%a)" ]]; then echo "last friday"; else echo "yesterday"; fi)' --author=$(git config --get user.email) --format=format:'%C(cyan) %ad %C(yellow)%h %Creset %s %Cgreen%d' --date=local"
[color]
    ui = auto
    interactive = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[merge]
    log = true
[mergetool]
    keepbackup = true
    keeptemporaries = false
[core]
    excludesfile = ~/.gitignore_global
    filemode = false
    commentchar = *
[push]
    default = matching
[gui]
    editor = /usr/local/bin/editor.bash
[git-up "fetch"]
    all = true
[commit]
	template = /tmp/git.template
