#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"ncmpcpp volume +"
    m:0x14 + c:95
    Control+Mod2 + F9

"ncmpcpp volume -"
    m:0x14 + c:95
    Control+Mod2 + F8

"ncmpcpp next"
    m:0x10 + c:171
    Mod2 + XF86AudioNext 

#Prev
"ncmpcpp prev"
    m:0x10 + c:173
    Mod2 + XF86AudioPrev 

#Play-Pause
"ncmpcpp toggle"
    m:0x10 + c:172
    Mod2 + XF86AudioPlay 

#Stop
"ncmpcpp stop"
    m:0x10 + c:174
    Mod2 + XF86AudioStop 

#Start
"ncmpcpp start"
    m:0x10 + c:179
    Mod2 + XF86Tools 
